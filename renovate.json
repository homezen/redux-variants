{
  "enabled": true,
  "packageRules": [
    {
      "packagePatterns": [
        "^babel.*",
        "^chai.*",
        "^codecov.*",
        "^enzyme.*",
        "^eslint.*",
        "^karma.*",
        "^mocha.*",
        "^nock.*",
        "^npm-check.*",
        "^nyc.*",
        "^react.*",
        "^redux.*",
        "^remark.*",
        "^sinon.*",
        "^webpack.*"
      ],
      "automerge": "minor"
    },
    {
      "packageNames": [
        "react",
        "react-dom",
        "react-addons-test-utils",
        "react-test-renderer"
      ],
      "groupName": "react"
    }
  ]
}
